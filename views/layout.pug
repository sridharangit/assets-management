doctype html
html
  head
    title Asset Management
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css")
    link(rel="stylesheet" href="/css/style.css")
    link(rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")
  body
    .container-fluid
      .row
        .col-md-2.sidebar.bg-white.border-end.min-vh-100.p-3
          h4.logo-text.mb-4 Assets Management
          ul.nav.flex-column
            li.nav-item
              a.nav-link(href="/employee") 
                i.bi.bi-people-fill.me-2
                | Employees
            li.nav-item
              a.nav-link(href="/assets")
                i.bi.bi-laptop-fill.me-2
                | Assets
            li.nav-item
              a.nav-link(href="/transactions")
                i.bi.bi-arrow-left-right.me-2
                | Transactions
            li.nav-item.mt-4
              a.nav-link.text-danger(href="/logout")
                i.bi.bi-box-arrow-right.me-2
                | Logout
        .col-md-10.p-0
          nav.navbar.navbar-light.bg-light.border-bottom.px-3.py-2
            a.navbar-brand.fw-bold(href="#") Hi Admin Welcome!
            .ms-auto.d-flex.align-items-center
              i.bi.bi-bell.icon-btn.me-3
              i.bi.bi-gear.icon-btn.me-3
              .profile-circle.bg-primary.text-white A
          block content
    script(src="https://code.jquery.com/jquery-3.7.0.min.js")
    script(src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js")
    script(src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js")
