extends layout

block content
  .p-4
    .row.g-4

      .col-md-3
        .card.rounded-4.shadow-sm.p-3
          .d-flex.align-items-center
            i.fa.fa-users.fs-2.text-primary.me-3
            div
              h6.mb-1.text-muted Total Employees
              h4.fw-bold #{totalEmployees}

      .col-md-3
        .card.rounded-4.shadow-sm.p-3
          .d-flex.align-items-center
            i.fa.fa-tags.fs-2.text-success.me-3
            div
              h6.mb-1.text-muted Asset Categories
              h4.fw-bold #{totalCategories}

      .col-md-3
        .card.rounded-4.shadow-sm.p-3
          .d-flex.align-items-center
            i.fa.fa-laptop.fs-2.text-info.me-3
            div
              h6.mb-1.text-muted Total Assets
              h4.fw-bold #{totalAssets}

      .col-md-3
        .card.rounded-4.shadow-sm.p-3
          .d-flex.align-items-center
            i.fa.fa-user-check.fs-2.text-warning.me-3
            div
              h6.mb-1.text-muted Assets Assigned
              h4.fw-bold #{assignedCount}

      .col-md-3
        .card.rounded-4.shadow-sm.p-3
          .d-flex.align-items-center
            i.fa.fa-box-open.fs-2.text-secondary.me-3
            div
              h6.mb-1.text-muted Not Assigned (In Stock)
              h4.fw-bold #{notAssignedCount}

      .col-md-3
        .card.rounded-4.shadow-sm.p-3
          .d-flex.align-items-center
            i.fa.fa-trash.fs-2.text-danger.me-3
            div
              h6.mb-1.text-muted Scrapped Assets
              h4.fw-bold #{scrappedCount}    
